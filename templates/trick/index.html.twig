{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset("assets/styles/home.css")}}">
	<link rel="stylesheet" href="{{asset("assets/styles/trick.css")}}">
{% endblock %}

{% block title %}Hello TrickController!
{% endblock %}


{% block body %}
	<div class="background_home vh-100  "></div>

	<div class="trick-detail-card example-wrapper container position-absolute top-50 start-50 translate-middle">

		<div class="card mb-3 ">
			{% for image in images %}
				{% if image.mainImage %}
					<img src="../uploads/image/{{trick.slug | lower}}/{{image.fileName}}" class="card-img-top main-pic" alt="...">
				{% endif %}
			{% endfor %}
			<div class="card-body">
				<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-inner">
						{% for image in images %}
							{% if image.mainImage == 0 %}
								<div class="carousel-item active">
									<img src="../uploads/image/{{trick.slug | lower}}/{{image.fileName}}" class="small-pics card-img-top " alt="...">
								</div>
							{% endif %}
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
				<h5 class="card-title">{{trick.name}}</h5>
				<p class="card-text">{{trick.description}}</p>
				<p class="card-text">
					<small class="text-body-secondary">{{trick.createdAt|date("m/d/Y", "Europe/Paris")}}</small>
				</p>
				{% if app.user != null %}
					{{ form_start(form, {'attr': {'class': 'd-flex justify-content-evenly'}})}}
					{{ form_errors(form.content)}}
					{{ form_widget(form.content, {'attr': {'placeholder': 'Trick.Comment.Content' | trans(), 'class': 'd-block w-50'} })}}
					<button type="submit" class="btn btn-primary btn-sm ml-2">{{'Trick.Comment.Submit'|trans()}}</button>
					{{ form_end(form) }}
				{% endif %}
				<div class="container d-flex flex-column alignt-items-center mt-3 pt-3 w-50 comment-list">
					{% for comment in commentList %}
						<div class="d-flex m-2">
							<svg class="bd-placeholder-img d-block" width="100" height="100" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="A generic square placeholder image with a white border around it, making it resemble a photograph taken with an old instant camera: 200x200" focusable="false"><title>A generic square placeholder image with a white border around it, making it resemble a photograph taken with an old instant camera</title><circle cx="50" cy="50" r="50" fill="#dee2e6"></circle><text x="50%" y="50%" fill="#dee2e6" dy=".3em">100</text></svg>
							{# <img src="../uploads/image/" class="small-pics card-img-top " alt="..."/> #}
							<div class="border m-2 w-75">
								<p class="card-text text-center">{{comment.content}}</p>
							</div>
						</div>
					{% endfor %}
					<!-- Ajouter le bouton et la logique loadmore -->
				</div>


			</div>

		</div>


	</div>
{% endblock %}
